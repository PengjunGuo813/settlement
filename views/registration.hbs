<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>S2023 Cap805 Registration Page</title>
    <link type="text/css" rel="stylesheet" href="/css/theme.css">
</head>
<body>
    <!-- Header -->
    {{> header user}}
    <h1>Registration</h1>

    {{#if errorMsg }}
        <h5>{{errorMsg}}</h5>
    {{else}}
        <h4>Please Register:</h4>
    {{/if}}

    <form method="post" action="/registration">
        <table class="form-table">
            <tr>
                <td><label class="fixedLabel"><h4>Name</h4></label></td>
                <td><input type="text" name="name"></td>
            </tr>
            <tr>
                <td><label class="fixedLabel"><h4>Email</h4></label></td>
                <td><input type="text" name="email"></td>
            </tr>
            <tr>
                <td><label class="fixedLabel"><h4>Password</h4></label></td>
                <td><input type="password" name="password"></td>
            </tr>
            <tr>
                <td><label class="fixedLabel"><h4>Repeat Your Password</h4></label></td>
                <td><input type="password" name="rpassword"></td>
            </tr>
            <tr>
                <td><label class="fixedLabel"></label></td>
                <td><button type="submit" class="login-button">Create Account</button></td>
            </tr>
        </table>
    </form>

    <!-- Footer -->
    {{> footer user}}
</body>
</html>