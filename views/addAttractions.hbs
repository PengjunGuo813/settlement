<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>S2023 Cap805 Add Attraction Page</title>
    <link type="text/css" rel="stylesheet" href="/css/theme.css">
</head>
<body>
    <!-- Header -->
    {{> header user}}
    <h1>Add Attraction Page</h1>

    {{#if error }}
        <strong><h3>{{error}}</h3></strong>
    {{else if success}}
        <strong><h3>{{success}}</h3></strong>
    {{/if}}

    <form method="post" action="/attractions/add">
        <table class="form-table">
            <tr>
                <td><label class="fixedLabel"><h4>Name *</h4></label></td>
                <td><input type="text" name="attractionName" required></td>
            </tr>
            <tr>
                <td><label class="fixedLabel"><h4>Fig Caption</h4></label></td>
                <td><input type="text" name="figcaption"></td>
            </tr>
            <tr>
                <td><label class="fixedLabel"><h4>Description *</h4></label></td>
                <td><input name="attractionDesc" type="text"  required/></td>
            </tr>
            <tr>
                <td><label class="fixedLabel"><h4>Image *</h4></label></td>
                <td><input name="attractionImg" type="file"  accept="image/*" required/></td>
            </tr>
            <tr>
                <td><label class="fixedLabel"><h4>Fees</h4></label></td>
                <td><input type="text" name="attractionFee"></td>
            </tr>
            <tr>
                <td><label class="fixedLabel"></label></td>
                <td>
                    <div class="button-links">
                        <button type="submit" >Add</button>
                    </div>
                </td>
            </tr>
        </table>
    </form>

    <!-- Footer -->
    {{> footer user}}
</body>
</html>



		